@model AddScheduleModel
@{
    ViewData["Title"] = "AddSchedule";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add A New Appointment</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Add Schedule</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Add A New Schedule</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Hospital"
                          asp-action="AddSchedule" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="PatientName" class="col-sm-2 col-form-label">Patient Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="PatientName"
                                           id="patientname" placeholder="Patient Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="PatientMobile" class="col-sm-2 col-form-label">Patient Mobile</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="PatientMobile" class="form-control"
                                           id="patientmobile" placeholder="Patient Mobile">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="DoctorName" class="col-sm-2 col-form-label">Doctor Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="DoctorName"
                                           id="doctorname" placeholder="Doctor Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="TestName" class="col-sm-2 col-form-label">Test Name</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="TestName" class="form-control"
                                           id="testname" placeholder="Test Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="DateAndTime" class="col-sm-2 col-form-label">Date And Time</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="DateAndTime" class="form-control"
                                           id="dateandtime" placeholder="Date And Time">
                                </div>
                            </div>


                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Add</button>
                            <a asp-action="Index" asp-controller="Hospital"
                               class="btn btn-default float-right">Cancel</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



